<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".LoginPage">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:background="#00000000"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="130dp"
            android:text="Log In"
            android:textSize="20sp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#D6D1D1"/>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="@drawable/roundbtn2">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/fb"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"/>
        <Button
            android:id="@+id/btnfblgnpage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:text="Continue with Facebook"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_marginLeft="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/g"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"/>
        <Button
            android:id="@+id/btngooglelgnpage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:text="Continue with Google"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginLeft="15dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Or"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/txtemaillgnpage"
        android:layout_marginTop="20dp"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:hint="Email address"
        android:paddingTop="17dp"
        android:paddingBottom="15dp"
        android:paddingLeft="25dp"
        android:textSize="16sp"
        android:background="@drawable/round"
        android:layout_gravity="center" />

    <EditText
        android:id="@+id/txtpass"
        android:layout_marginTop="10dp"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:hint="Enter your password"
        android:paddingTop="17dp"
        android:paddingBottom="15dp"
        android:paddingLeft="25dp"
        android:background="@drawable/round"
        android:layout_gravity="center"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/btnsublgnpage"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"
        android:background="@drawable/roundbtn1"
        android:text="Log In"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="normal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot password?"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="17sp"
        android:textStyle="bold"/>






</LinearLayout>